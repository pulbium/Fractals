<Window x:Class="Fractals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fractals"
        mc:Ignorable="d"
        Title="Fractal Generator" Height="768" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="718" Margin="10,10,0,0" VerticalAlignment="Top" Width="790"/>
        <Border BorderBrush="Black" BorderThickness="1" Height="718" Margin="0,0,10,0" VerticalAlignment="Center" Width="208" HorizontalAlignment="Right">
            <Grid>
                <TextBox HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="Insert equation" VerticalAlignment="Top" Width="120" Margin="0,10,0,0"/>
                <Button x:Name="calcButton" Content="Calculate" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Width="75" Click="CalcButton_Click"/>
                <ProgressBar x:Name="pgBar" HorizontalAlignment="Center" Height="10" Margin="0,106,0,0" VerticalAlignment="Top" Width="150"/>
                <Button x:Name="zoomBtnPLus" Content="+" HorizontalAlignment="Left" Margin="75,156,0,0" VerticalAlignment="Top" Width="25" Height="25"/>
                <Button x:Name="zoomBtnMinus" Content="-" HorizontalAlignment="Left" Margin="105,156,0,0" VerticalAlignment="Top" Width="25" Height="25"/>
            </Grid>
        </Border>
    </Grid>
</Window>
